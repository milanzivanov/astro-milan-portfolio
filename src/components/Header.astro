---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
import { Icon } from "astro-icon";
---

<header class="header">
  <div class="wrapper">
    <div class="header__container">
      <div class="logo">
        <a href="/">
          <Icon name="logo-2021" class="svg-logo" />
        </a>
      </div>
      <nav>
        <Navigation />
      </nav>

      <ThemeIcon />
      <Hamburger />
    </div>
  </div>
</header>

<style is:global>
  .header {
    background-color: var(--header-color-o-90);
    position: relative;
    z-index: 11;
    padding: 1rem;
  }

  @media screen and (min-width: 1024px) {
    .header {
      padding: 0;
    }
  }

  .header__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem;
  }

  .logo {
    display: block;
  }

  .logo a {
    display: flex;
    align-items: center;
  }

  .svg-logo {
    width: 50px;
    height: auto;
    fill: var(--primary-heading-color);
  }

  @media screen and (min-width: 1024px) {
    .svg-logo {
      width: 70px;
    }
  }

  @media screen and (min-width: 1360px) {
    .svg-logo {
      width: 80px;
    }
  }

  /* nav styles */
  .hamburger {
    position: relative;
    cursor: pointer;
  }

  .hamburger .line {
    position: relative;
    display: block;
    width: 45px;
    height: 5px;
    margin-bottom: 10px;
    background-color: var(--primary-heading-color);
    border-radius: 5px;
    transition: transform ease-in-out 300ms;
  }

  .hamburger .line--bottom {
    margin-bottom: 0;
  }

  .line--middle.active {
    opacity: 0;
  }

  .line--top.active {
    transform: translate(0, 16px) rotate(-45deg);
  }

  .line--bottom.active {
    transform: translate(0, -14px) rotate(45deg);
  }

  .nav-links {
    width: 100%;
    top: 5rem;
    left: 48px;
    display: none;
    margin: 0;
  }

  nav {
    margin-right: auto;
  }

  .nav-links a {
    display: block;
    text-align: center;
    padding: 10px 0;
    text-decoration: none;
    font-size: 1rem;
    text-transform: capitalize;
    color: var(--background-main-color);
  }

  /* mob nav */
  .nav-links__mobile {
    display: none;
  }

  .nav-links__mobile {
    position: fixed;
    inset: 0 0 0 0;
    background: url("/public/it-wire.svg") repeat;
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    background-color: var(--primary-heading-color);
    z-index: 11;
  }

  .nav-links__mobile a {
    display: block;
    text-decoration: none;
    padding: 1rem;
    color: var(--color);
    font-size: 1.3rem;
    text-decoration: underline;
  }

  .open {
    display: flex;
  }

  @media screen and (min-width: 1024px) {
    .nav-links {
      margin-left: 3rem;
      display: flex;
      position: static;
      width: auto;
      background: none;
    }

    .nav-links a {
      display: inline-block;
      padding: 15px 20px;
    }

    .nav-links a.active {
      color: var(--primary-heading-color);
    }

    .nav-link:hover,
    .nav-link:active,
    .nav-link:focus {
      color: var(--primary-heading-color);
    }

    .hamburger {
      display: none;
    }
  }
</style>
