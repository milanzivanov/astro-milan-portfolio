---
import Layout from "../layouts/Layout.astro";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { Icon } from "astro-icon";

const pageTitle = "About Me";

const skills = [
  {
    name: "Web",
    linkUrl: "mdi:web-box",
  },
  {
    name: "Developing",
    linkUrl: "simple-icons:astro",
  },
  {
    name: "Web Design",
    linkUrl: "ic:baseline-design-services",
  },
  {
    name: "Figma",
    linkUrl: "ph:figma-logo-bold",
  },
  {
    name: "Responsive design",
    linkUrl: "mdi:responsive",
  },
  {
    name: "Vector design",
    linkUrl: "tabler:vector",
  },
];

const companies = [
  {
    companySrc:
      "https://ik.imagekit.io/milanz/milanzivanov_com/vegaLogo_4whdIwNwV.gif?updatedAt=1638480904610",
    altText: "Logo of the company vega it sourcing",
  },
  {
    companySrc:
      "https://ik.imagekit.io/milanz/milanzivanov_com/htec-logo_tZqCZq2M8.png?updatedAt=1641384068829",
    altText: "Logo of the company htec",
  },
  {
    companySrc:
      "https://ik.imagekit.io/milanz/milanzivanov_com/oma-adriatic_WCqN77dzImJ.png?updatedAt=1641384549148",
    altText: "Logo of the company oma adriatic",
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead pageTitle={pageTitle} />
  </head>
  <body>
    <Layout>
      <section class="about">
        <div class="wrapper">
          <div class="about-container about-container--small">
            <div class="about-container__box">
              <div class="about-container-text">
                <h2 class="h2-title">About Me</h2>
                <p class="text-default text-default--ptb border-bottom">
                  Hello, my name is <strong>Milan</strong> and I'm passionate about
                  bringing both the technical and visual aspects of digital products
                  to life. User experience and writing clean accessible human code
                  matters to me. Less is more I agree with that. I graduated in Higher
                  Education Technical School of Professional Studies of Novi Sad(Serbia).
                </p>

                <p class="text-default text-default--ptb">
                  I'm happiest when I'm coding, learning, exploring and thinking
                  about how to make things better. Available for any freelance
                  work, and feel free to reach out and say hello! I promise I
                  don't bite. I am particularly interested in Frontend. React is
                  my next destination.
                </p>
              </div>
            </div>
            <div class="about-container__box about-container__bg"></div>
          </div>
        </div>
      </section>

      <section class="about-container">
        <div class="wrapper">
          <div class="about-container__content">
            <div class="about__box">
              <div class="what-i-do-container">
                <h2 class="h2-title h2-title--center">What I do</h2>
                <ul class="skill-box">
                  {
                    skills.map((skill) => (
                      <li class="skill-box__item">
                        <Icon
                          class="svg-skill-icon"
                          name={skill.linkUrl}
                          alt="some test text"
                        />
                        <span>{skill.name}</span>
                      </li>
                    ))
                  }
                </ul>
              </div>
            </div>

            <div class="about__box">
              <div class="companies-container">
                <h2 class="h2-title h2-title--center">
                  Companies I worked for
                </h2>

                <div class="companies-box">
                  {
                    companies.map((company) => (
                      <div class="company-box__item">
                        <img
                          src={company.companySrc}
                          alt={company.altText}
                          class="svg-brand-icon"
                        />
                      </div>
                    ))
                  }
                </div>
              </div>
            </div>

            <div class="about__box">
              <div class="contact">
                <h2 class="h2-title h2-title--center">Get in touch with me</h2>
                <div class="contact-container">
                  <div class="contact-container__item">
                    <img src="/Milan_right.webp" alt="my picture" />
                  </div>
                  <div class="contact-container__item">
                    <form
                      id="contactForm"
                      name="_replyto"
                      class="contact-container__form"
                      action="https://formspree.io/f/moqrvozd"
                      method="POST"
                    >
                      <label for="email-form" class="form__label"> Email</label>
                      <input
                        class="form__input"
                        type="email"
                        name="_replyto"
                        placeholder="Your email *"
                        id="email-form"
                        required
                      />

                      <label for="message-form" class="form__label">
                        Message</label
                      >
                      <textarea
                        class="form__textarea"
                        cols="30"
                        rows="10"
                        name="message"
                        id="message-form"
                        required
                      >
                      </textarea>

                      <button class="form__btn" type="submit"> send</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <Footer />
    </Layout>
    <style>
      .skill-box {
        display: flex;
        flex-wrap: wrap;
        color: #333;
        text-align: center;
        padding: 2rem 1rem;
        margin: 0;
        font-size: 0.8rem;
      }
      .skill-box__item {
        flex: 1 1 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-bottom: 2.5rem;
      }

      @media screen and (min-width: 1024px) {
        .skill-box__item {
          flex: 1 1 33.333%;
        }
      }

      .text-default {
        width: 100%;
      }

      .border-bottom {
        border-bottom: 1px solid #ddd;
      }

      .h2-title {
        text-transform: uppercase;
        padding: 2rem 0;
        color: var(--primary-heading-color);
      }

      .h2-title--center {
        text-align: center;
      }

      .svg-skill-icon {
        height: 60px;
        width: 60px;
        color: var(--primary-heading-color);
      }

      .svg-brand-icon {
        width: 100px;
        height: 100px;
      }

      h3 {
        padding-bottom: 1.5rem;
        color: #333;
        font-weight: 400;
      }
    </style>
  </body>
</html>
